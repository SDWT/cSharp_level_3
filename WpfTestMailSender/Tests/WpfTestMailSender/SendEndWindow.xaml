<Window x:Class="WpfTestMailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackgroundBrush}"
        Title="SendEndWindow" Height="175" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="1">
    <Grid>
        <Label x:Name="ISendEnd" Content="Работа завершена." HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="36">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="{StaticResource TopGradientSelectColor}" Offset="0" />
                    <GradientStop Color="{StaticResource BottomGradientSelectColor}" Offset="1" />
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Right" Margin="0,0,50,20" VerticalAlignment="Bottom" Width="75" FontSize="16" Click="BtnOK_Click"/>

    </Grid>
</Window>
